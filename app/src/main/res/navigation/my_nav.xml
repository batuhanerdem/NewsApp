<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/holderFragment">
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.newsapp.ui.main_activity.settings_fragment.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_holderFragment"
            app:destination="@id/holderFragment" />
    </fragment>
    <fragment
        android:id="@+id/holderFragment"
        android:name="com.example.newsapp.ui.main_activity.holder_fragment.HolderFragment"
        android:label="fragment_holder"
        tools:layout="@layout/fragment_holder" >
        <action
            android:id="@+id/action_holderFragment_to_newFragment"
            app:destination="@id/newFragment" />
        <action
            android:id="@+id/action_holderFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_holderFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newFragment"
        android:name="com.example.newsapp.ui.main_activity.new_fragment.NewFragment"
        android:label="fragment_new"
        tools:layout="@layout/fragment_new" >
        <action
            android:id="@+id/action_newFragment_to_holderFragment"
            app:destination="@id/holderFragment" />
        <argument
            android:name="New"
            app:argType="com.example.newsapp.domain.model.New" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.newsapp.ui.main_activity.news_fragment.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment_to_newFragment"
            app:destination="@id/newFragment" />
    </fragment>
</navigation>